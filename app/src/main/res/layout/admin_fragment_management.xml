<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".view.admin.AdminMainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_default_padding"
        android:text="@string/appstr_management_content_display" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_medium_margin"
            android:orientation="vertical"
            android:paddingStart="@dimen/app_default_padding"
            android:paddingLeft="@dimen/app_default_padding"
            android:paddingTop="@dimen/app_default_padding"
            android:paddingEnd="@dimen/app_default_padding"
            android:paddingRight="@dimen/app_default_padding">

            <LinearLayout
                android:id="@+id/layout_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_product" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/appstr_product" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Kelola produk kamu sesuai kebutuhan" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_category" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/appstr_category" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Buat kategori agar produksi lebih rapi" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_discount" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/appstr_discount" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Kelola diskon untuk semua transaksi kamu" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"

                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_customer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/appstr_customer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Kelola pelanggan yang datang membeli" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_product" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextTitle.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Karyawan" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Buat kategori agar produksi lebih rapi" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_product" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextTitle.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Perangkat" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Kelola diskon untuk semua transaksi kamu" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_default_margin"
                android:background="@drawable/layout_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/app_default_padding"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/app_default_icon_size"
                    android:layout_height="@dimen/app_default_icon_size"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_product" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/app_default_padding"
                    android:paddingLeft="@dimen/app_default_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextTitle.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Pajak" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="Kelola pelanggan yang datang membeli" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>