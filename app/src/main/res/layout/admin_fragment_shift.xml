<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        tools:context=".view.admin.shift.ShiftFragment"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_estockcard" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardUseCompatPadding="true">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="5dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_grey600"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Pengaturan"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="Pilihan Shift"
                        android:textSize="18sp" />



                    <LinearLayout
                        android:id="@+id/layout_add_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:background="@drawable/selector_white_text_field"
                        android:clickable="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/title_set_schedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Atur Jadwal"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textColor="@color/blue_grey800"
                            android:clickable="false"
                            android:focusable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_view_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:background="@drawable/selector_white_text_field"
                        android:clickable="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/title_history_shift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Riwayat Shift"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:textAlignment="gravity"
                            android:textColor="@color/blue_grey800"
                            android:clickable="false"
                            android:focusable="false"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
