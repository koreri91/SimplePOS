<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.AdminMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_mini_horizontal_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_text_field"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextContentMini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/title_line_center"
                    android:layout_toLeftOf="@+id/title_line_center"
                    android:gravity="center_horizontal"
                    android:text="@string/appstr_number_of_credit_transaction" />

                <View
                    android:id="@+id/title_line_center"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextContentMini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/title_line_center"
                    android:layout_toRightOf="@+id/title_line_center"
                    android:gravity="center_horizontal"
                    android:text="@string/appstr_number_of_customer" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_number_of_credit_transaction"
                    style="@style/TextContent.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_medium_padding"
                    android:layout_toStartOf="@+id/center_content"
                    android:layout_toLeftOf="@+id/center_content"
                    android:gravity="center"
                    android:text="@string/appstr_app_name" />

                <View
                    android:id="@+id/center_content"
                    style="@style/TextContent.Bold"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:text="@string/appstr_app_name" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_number_of_customer"
                    style="@style/TextContent.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_medium_padding"
                    android:layout_toEndOf="@+id/center_content"
                    android:layout_toRightOf="@+id/center_content"
                    android:gravity="center"
                    android:text="@string/appstr_app_name" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <View
                    android:id="@id/center_line"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/activity_mini_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_mini_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_mini_vertical_margin"
                    android:layout_marginRight="@dimen/activity_mini_vertical_margin" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextContentMini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/center_line"
                    android:layout_toStartOf="@+id/center_line"
                    android:gravity="center"
                    android:text="@string/appstr_due_date_payment" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextContentMini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/center_line"
                    android:layout_toEndOf="@+id/center_line"
                    android:gravity="center"
                    android:text="@string/appstr_transaction_not_been_paid_off" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_small_layout_height"
                android:orientation="horizontal">

                <View
                    android:id="@id/center_line"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/activity_mini_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_mini_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_mini_vertical_margin"
                    android:layout_marginRight="@dimen/activity_mini_vertical_margin" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_transaction_due_field"
                    style="@style/TextContentMini.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/center_line"
                    android:layout_toStartOf="@+id/center_line"
                    android:paddingTop="@dimen/activity_mini_vertical_margin"
                    android:text="@string/appstr_app_name" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_transaction_not_been_paid_off"
                    style="@style/TextContentMini.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/center_line"
                    android:layout_toEndOf="@+id/center_line"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_mini_vertical_margin"
                    android:text="@string/appstr_app_name" />



            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_credit_list_btn"
                style="@style/TextContentLink.Bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_mini_edit_text"
                android:layout_marginTop="@dimen/app_medium_padding"
                android:layout_marginBottom="@dimen/app_medium_padding"
                android:gravity="center"
                android:text="@string/appstr_view_credit_list" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>