<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_title"
        style="@style/TextTitle.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appstr_app_name"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_content"
        style="@style/TextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appstr_app_name"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_default_layout_height"
        android:gravity="right|end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_negative_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_mini_edit_text"
            android:layout_gravity="end|right|center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Batal"
            style="@style/Button.Cancel"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_mini_edit_text"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ya"
            style="@style/Button.Save"/>

    </LinearLayout>

</LinearLayout>